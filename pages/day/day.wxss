/* 睡眠统计 */
.statistics{
  width: 100%;
  height: 699rpx;
  background-color: #fff;
  margin-bottom: 22rpx;
}
.statistics .content>view .content-time{
  font-size: 30rpx;
  font-family:PingFangHK-Medium,PingFangHK;
  font-weight:500;
  color:#333;
  letter-spacing:1px;
}
.statistics .content>view .content-title,.time .content>view .content-title{
  margin-top: 42rpx;
}
.statistics .content>view .content-text,.time .content>view .content-text{
  color: #666666;
  font-size:24rpx;
  font-family:PingFangHK-Regular,PingFangHK;
  font-weight:400;
}
.statistics .content>view image{
  margin: 56rpx 36rpx 0 24rpx;
  float: left;
}
.statistics .content>view,.time .content>view{
  width:337rpx;
  height:165rpx;
  background:rgba(73,117,240,0.07);
  border-radius:13rpx;
  float: left;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
}
.statistics .sleep-text,.analysis .sleep-text,.time .sleep-text,.analyze .sleep-text{
  padding: 30rpx 30rpx 30rpx 30rpx;
  border-bottom: 1rpx solid #ededed;
  font-size: 32rpx;
