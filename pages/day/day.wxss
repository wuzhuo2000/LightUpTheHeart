  font-weight:600;
  margin-bottom: 25rpx;
}
.statistics .sleep-text>view,.analysis .sleep-text>view,.time .sleep-text>view,.analyze .sleep-text>view{
  width:8rpx;
  height:35rpx;
  background:rgba(28,82,240,1);
  border-radius:4px;
  float: left;
  margin-right: 17rpx;
  margin-top: 2px;
}
