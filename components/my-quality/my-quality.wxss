/* components/my-quality/my-quality.wxss */
.content{
  width: 100%;
  padding:20rpx 29rpx;
  border-bottom:1px solid #EDEDED;
}
.weightText{
  display: inline-block;
  width:8rpx;
  height:35rpx;
  background:rgba(28,82,240,1);
  border-radius:4px;
}
.weightText1{
  width:266rpx;
  height:45rpx;
  font-size:32rpx;
  font-family:PingFangHK-Semibold,PingFangHK;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  letter-spacing:1rpx;
  padding-left: 10rpx;
}
image{
  width:70rpx;
  height:70rpx;
}
.flexView{
  display: flex;
  padding: 50rpx 29rpx;
}
.flexView view{
  flex: 1;
  height: 120rpx;
  /* background-color: red; */
  position: relative;
  text-align: center;
}
.flexView view image{
  display: block;
  margin:  0 auto;
}
.flexView view text{
  font-size:28rpx;
  font-family:PingFangHK-Regular,PingFangHK;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:40rpx;
  display: inline-block;
  padding-top: 20rpx;
}
/* 间隔 */
.interval{
  width: 100%;
  height: 20rpx;
  background-color: rgb(240, 239, 239);
}