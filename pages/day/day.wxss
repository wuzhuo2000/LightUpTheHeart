/* pages/day/day.wxss */
page{
  background-color: #f4f5f7;
}
/* tab切换 */
.tab-left .active {
  color: #4975f0;
  border-bottom: 3px solid #4975f0;
}
.tab-left {
  background: #fff;
  position: fixed;
  z-index: 22;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
  color: #333;
  border-top: 1rpx solid #EDEDED;
}
.tab-left view {
  width: 69rpx;
  line-height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-left: 69rpx; */
  font-size: 36rpx;
  font-weight:500;
  padding-top: 28rpx;
  margin: 0 27rpx;

}
.tab-right{
  margin-top: 87rpx;
  height: 100%;
}
.tab-right .right-item {
  display: none;
  width: 100%;
}
.tab-right .right-item.active {
  display: block;
}
